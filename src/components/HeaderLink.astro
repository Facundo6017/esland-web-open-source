---
import Link from './Link.astro'
import { getRelativeLocaleUrl } from "astro:i18n"

interface Props {
  checkActive?: boolean
  href: string
  class?: string
}

const { currentLocale = "es" } = Astro
const {
  href,
  class: className,
  checkActive = true,
  ...restOfProps
} = Astro.props

const currentPath = Astro.url.pathname
const destination = getRelativeLocaleUrl(currentLocale, href);
const isActive = currentPath === destination && checkActive
---

<Link
  href={href}
  class:list={[
    className,
    "border-b-2",
    isActive ? "border-white" : "border-transparent",
  ]}
  {...restOfProps}
>
  <slot />
</Link>
